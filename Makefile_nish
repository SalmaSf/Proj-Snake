
SRCDIR=./src
INCDIR=./include
CC=gcc
INCLUDE = -I$(INCDIR) -I/usr/local/include/SDL2  # eller anv채nd r채tt v채g beroende p책 var SDL2 finns
CFLAGS = -g $(INCLUDE) -c
LDFLAGS = -lSDL2 -lSDL2_image -lSDL2_ttf -lm

rocket: main.o rocket.o
	$(CC) -o rocket main.o rocket.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

rocket.o: $(SRCDIR)/rocket.c $(INCDIR)/rocket.h
	$(CC) $(CFLAGS) $(SRCDIR)/rocket.c

clean:
	rm -f *.o rocket
	rm -f rm -f rocket
