
SRCDIR=./src
INCDIR=./include
CC=gcc
INCLUDE = -I/opt/homebrew/include/SDL2 -I$(INCDIR)
CFLAGS = -g $(INCLUDE) -c
LDFLAGS = -L/opt/homebrew/lib -lSDL2 -lSDL2_image -lSDL2_ttf -lm

rocket: main.o rocket.o
	$(CC) -o rocket main.o rocket.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

rocket.o: $(SRCDIR)/rocket.c $(INCDIR)/rocket.h
	$(CC) $(CFLAGS) $(SRCDIR)/rocket.c

clean:
	rm -f *.o rocket

	
