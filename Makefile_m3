
SRCDIR=./src
INCDIR=./include
CC=gcc
INCLUDE = -I/opt/homebrew/include/SDL2 -I$(INCDIR)
CFLAGS = -g $(INCLUDE) -c -arch arm64
LDFLAGS = -L/opt/homebrew/lib -lSDL2 -lSDL2_image -lSDL2_ttf -lm -arch arm64

snake: main.o snake.o
	$(CC) -o snake main.o snake.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

snake.o: $(SRCDIR)/snake.c $(INCDIR)/snake.h
	$(CC) $(CFLAGS) $(SRCDIR)/snake.c

clean:
	rm -f *.o snake
	rm -f rm -f snake
	