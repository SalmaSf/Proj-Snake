SRCDIR=./src
INCDIR=./include
CC=gcc

# Path adjusted to raw Windows path style
SDL2_INCLUDE = C:/msys64/mingw64/include/SDL2
SDL2_LIB = C:/msys64/mingw64/lib

INCLUDE = -I$(SDL2_INCLUDE) -I$(INCDIR)
CFLAGS = -g $(INCLUDE) -c
LDFLAGS = -L$(SDL2_LIB) -lmingw32 -lSDL2main -lSDL2 -lSDL2_image -lSDL2_ttf -mwindows -lm

snake: main.o snake.o bakgrund.o
	$(CC) -o snake main.o snake.o bakgrund.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

snake.o: $(SRCDIR)/snake.c $(INCDIR)/snake.h
	$(CC) $(CFLAGS) $(SRCDIR)/snake.c

bakgrund.o: $(SRCDIR)/bakgrund.c $(INCDIR)/bakgrund.h
	$(CC) $(CFLAGS) $(SRCDIR)/bakgrund.c

meny.o: $(SRCDIR)/meny.c $(INCDIR)/meny.h
	$(CC) $(CFLAGS) $(SRCDIR)/meny.c
clean:
	del /Q *.o
	del /Q *.exe
